each error in flash.error || []
  .alert.alert-danger.alert-dismissible(role='alert')
    button.close(type="button", data-dismiss="alert")
      span(aria-hidden="true") &times;
      span.sr-only Close
    strong Warning! &nbsp;
    span= flash.error
