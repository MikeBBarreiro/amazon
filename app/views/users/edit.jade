extends ../shared/template
block content
  h2 Edit Profile
  .row
    .col-xs-6
      form(role='form', method='post', action='/show')
        input(type='hidden', name='_method', value='put')
        .form-group
          label(for='email') Email
          input.form-control#email(type='email', name='email', value=user.email, autofocus=true)
        .form-group
          label(for='age') Age
          input.form-control#age(type='number', name='age', value=user.age)
        .form-group
          label(for='photo') Photo
          input.form-control#photo(type='text', name='photo', value=user.photo)

        button.btn.btn-primary(type='submit') Submit
    .col-xs-6

block scripts
