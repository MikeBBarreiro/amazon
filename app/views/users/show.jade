extends ../shared/template
block content
  .row
    .col-xs-4
      .panel.panel-default
        .panel-heading
          .row
            .col-xs-12
              h2: a.fa.fa-pencil-square-o(href='/show/edit')= user.email || user.username
        .panel-body
          .row
            .col-xs-6
              a.thumbnail(href='#')
                img(src=user.photo)
            .col-xs-6
          .row
            .col-xs-12
              table.table.table-striped.table-hover.table-bordered
                thead
                  tr
                    td Email
                    td Age
                tbody
                  tr
                    td= user.email
                    td= user.age
    .col-xs-8

block scripts

