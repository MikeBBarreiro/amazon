extends ../shared/template
block content
  h1 Products

  table.table.table-stripped.table-hover
    thead
      th Photo
      th Name
      th Price
    tbody
      each product in products
        tr
          td.photo(style='background-image:url("#{product.photo}"); background-size:cover; background-repeat:no-repeat;')
          td
            form(method='post', action='/cart')
              input(type='hidden', name='productId', value=product._id)
              button.btn.btn-primary.btn-sm.fa.fa-shopping-cart(type='submit')= product.name
          td= product.price
