extends ../shared/template
block content
  h2= user.email
   .row
    .col-xs-4
      .panel.panel-default
        .panel-body
          .row
            .col-xs-12
              h2: a(href='/profile/edit')= user.email
          .row
            .col-xs-6
              a.thumbnail(href='#')
                img(src=user.photo)
            .col-xs-6
          .row
            .col-xs-12
              table.table.table-striped.table-hover.table-bordered
                thead
                  tr
                    th Email
                    th Age
                tbody
                  tr
                    td= user.email
                    td= user.age
    .col-xs-8

block scripts
